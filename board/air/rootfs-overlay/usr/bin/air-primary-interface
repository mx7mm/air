#!/bin/sh

if [ -x /usr/bin/air-runtime-flags ]; then
	. /usr/bin/air-runtime-flags
fi

if [ -n "${AIR_RUNTIME_LOG:-}" ]; then
	printf '%s [air-primary-interface] started\n' "$(date '+%Y-%m-%dT%H:%M:%S%z')" >> "$AIR_RUNTIME_LOG"
fi
if [ -n "${AIR_LOG_PERSISTENT_DIR:-}" ] && [ -d "$AIR_LOG_PERSISTENT_DIR" ]; then
	printf '%s [air-primary-interface] started\n' "$(date '+%Y-%m-%dT%H:%M:%S%z')" >> "$AIR_LOG_PERSISTENT_DIR/runtime.log"
fi

printf '\033c'
echo "Willkommen"

while :; do
	sleep 3600
done
