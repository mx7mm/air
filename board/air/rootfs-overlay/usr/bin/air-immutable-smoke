#!/bin/sh

TEST_FILE="/.air-root-write-test.$$"

if touch "$TEST_FILE" 2>/dev/null; then
	echo "immutability-check: root filesystem is writable"
	rm -f "$TEST_FILE"
	if [ "${AIR_IMMUTABILITY_STRICT:-0}" = "1" ]; then
		echo "immutability-check: strict mode failed"
		exit 1
	fi
	exit 0
fi

echo "immutability-check: root filesystem is read-only"
exit 0
