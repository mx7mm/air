# Air Linux Kernel Configuration Fragment (ARM64)

# Enable EFI boot
CONFIG_EFI=y
CONFIG_EFI_STUB=y

# Console
CONFIG_VT=y
CONFIG_VT_CONSOLE=y
CONFIG_FRAMEBUFFER_CONSOLE=y

# Storage (EXT4, VFAT)
CONFIG_EXT4_FS=y
CONFIG_VFAT_FS=y

# Virtio (for QEMU/UTM)
CONFIG_VIRTIO=y
CONFIG_VIRTIO_PCI=y
CONFIG_VIRTIO_MMIO=y
CONFIG_VIRTIO_BLK=y
CONFIG_VIRTIO_NET=y
CONFIG_VIRTIO_GPU=y

# Built-in graphics console path for UTM display output.
CONFIG_DRM=y
CONFIG_DRM_VIRTIO_GPU=y
CONFIG_DRM_SIMPLEDRM=y
CONFIG_FB_SIMPLE=y

# Networking (minimal, for future use)
CONFIG_NET=y
CONFIG_INET=y
