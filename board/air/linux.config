# Air Linux Kernel Configuration Fragment
# Minimal additions to x86_64_defconfig

# Enable EFI boot
CONFIG_EFI=y
CONFIG_EFI_STUB=y

# Console
CONFIG_VT=y
CONFIG_VT_CONSOLE=y
CONFIG_FRAMEBUFFER_CONSOLE=y

# Basic drivers
CONFIG_ATA=y
CONFIG_SATA_AHCI=y
CONFIG_BLK_DEV_SD=y
CONFIG_EXT4_FS=y
CONFIG_VFAT_FS=y

# Networking (for later phases)
CONFIG_NET=y
CONFIG_INET=y
CONFIG_NETDEVICES=y
CONFIG_ETHERNET=y
CONFIG_E1000=y
CONFIG_E1000E=y
